  "version": "0.2.0",
  "configurations": [
    {
      "name": "Basic test file",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/custom_components/vector/ha_vector/test.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "GRPC test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/custom_components/vector/ha_vector/test_grpc.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {

      "name": "Convert datasets",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/Datasets/txt_to_json.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      // Example of attaching to local debug server
      "name": "Python: Attach Local",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ]
    },
    {
      // Example of attaching to my production server
      "name": "Python: Attach Remote",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "homeassistant.local",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/usr/src/homeassistant"
        }
      ]
    }
  ]
}